          <th>Address</th>
          <th>Contact 1</th>
          <th>Contact 2</th>
        </tr>
      </thead>

      <tbody>
        
          <% @ambulancelocations.each do |t|%>
            <% @location_info_id = t.ambulanceinfo_id %>
            <% @status = Ambulancestatus.find_by('ambulanceinfo_id' => @location_info_id) %>
            <% @info = Ambulanceinfo.find_by_id(@location_info_id) %>
            

          <tr>
            <% if(@status)%>
              <% if(@status.status == true)%>
                <td>Busy</td>
              <% elsif(@status.status == false)%>
                <td>Available</td>
              <% else%>
                <td></td>
              <%end%>

            <%else%>
              <td>Available</td>
            <%end%>

            <td>
              <%= number_with_precision(t.distance.round(2), :precision => 2, :delimiter => ',') %> Km
            </td>

            <td><%= @info.name %></td>
            <td><%= t.address %></td>
            <td><%= @info.contact1.to_i %></td>
            <td><%= @info.contact2.to_i %></td>
            
          </tr>
          <%end%>
      </tbody>
    </table>
